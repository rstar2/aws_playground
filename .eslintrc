{
  "env": {
      "es6": true,
      "node": true
  },
  "parserOptions": {
      "ecmaVersion": 2017,
      "ecmaFeatures": {
          "experimentalObjectRestSpread": true
      },
      "sourceType": "script"
  },
  "extends": "eslint:recommended",
  "rules": {
      "consistent-return":"error",
      "indent"           : ["warn", 4,  { "SwitchCase": 1 }],
      "semi"             : ["warn", "always"],
      "quotes"           : ["error", "single"],
      "no-else-return"   : "warn",
      "space-unary-ops"  :"error",
      "no-console"       : "off",
      "no-var"           : "warn"
  }
}
